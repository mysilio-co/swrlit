{
  "compilerOptions": {
    "target": "esnext",
    //"declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "strict": true,
    // linter checks for common issues
    //"noImplicitReturns": true,
    //"noFallthroughCasesInSwitch": true,
    // noUnused* overlap with @typescript-eslint/no-unused-vars, can disable if duplicative
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "esModuleInterop": true,
    // must set these two as of 6/22 to support exports in solid-client
    // see https://github.com/microsoft/TypeScript/issues/33079
    "module": "node16",
    "moduleResolution": "node16",
    "jsx": "react",
    // significant perf increase by skipping checking .d.ts files, particularly those in node_modules. Recommended by TS
    "skipLibCheck": true,
    // error out if import and file system have a casing mismatch. Recommended by TS
    "forceConsistentCasingInFileNames": false,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "typedocOptions": {
    "out": "docs/api",
    "entryPoints": [
      // The source files of everything listed under `exports` in our package.json
      // (i.e. public API's that should be documented) should be listed here:
      "src/hooks/things.ts",
    ],
    "exclude": [
      "node_modules/**",
      "**/*.test.ts",
      // Internal helpers:
      "**/*.internal.ts",
      // End-to-end tests:
      "e2e/**",
      // Re-exported functions are already documented in their own modules:
      "src/index.ts",

    ],
    "theme": "default",
    "readme": "none",
    "entryDocument": "index.html"
  }
}